<c:if test="${not empty result}">
<p> Results ${result.startOffset} - ${result.endOffset} of ${result.totalCount}<br/>
</p>
</c:if>

         
        <!-- <c:if test="${not empty bisens}"> -->
        <c:if test="${not empty result.hitList}">
            <table width="500px">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Doc</th>
                        <th>Hu Sentence</th>
                        <th>En Sentence</th>
                    </tr>
                </thead>
                <!-- <c:forEach items="${bisens}" var="bisen"> -->
                <c:forEach items="${result.hitList}" var="bisen">
                    <tr>
                        <td>${bisen.id}</td>
                        <td>
                            <c:out value="${fn:substring(bisen.doc, 0, 15)}"/>
                        </td>
                        <td>
                            <c:out value="${bisen.huSentence}"/>
                        </td>
                        <td>
                            <c:out value="${bisen.enSentence}"/>
                        </td>
                    </tr>
                </c:forEach>
            </table>
        </c:if>
        <!-- 
        <c:if test="${empty result.hitList}">
            <spring:message arguments="${entity_label_plural}" code="entity.not.found"/>            
        </c:if>
         -->
         
